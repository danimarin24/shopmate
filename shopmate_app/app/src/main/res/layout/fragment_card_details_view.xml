<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.utils.CardDetailsViewFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Encabezado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle de la Compra"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Contenedor de Categorías -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Icono de Categoría (se cargarán dinámicamente) -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pasta"
                android:layout_marginEnd="8dp"/>

            <!-- Añadir más iconos de categorías según sea necesario -->

        </LinearLayout>

        <!-- Lista de Items Actuales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items Actuales"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ListView
            android:id="@+id/list_view_current_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>

        <!-- Lista de Items para Añadir -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Items"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ListView
            android:id="@+id/list_view_add_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>

        <!-- Botón para Añadir Items -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Seleccionados"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>



</FrameLayout>