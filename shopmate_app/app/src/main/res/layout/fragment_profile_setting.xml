<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorForegroundInverse"
    tools:context=".ui.fragments.profile.ProfileSettingFragment">

    <!-- Blocks -->
    <LinearLayout
        android:id="@+id/lytStats"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Inner block 1 -->
        <!-- ACCOUNT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_block_bg"
            android:orientation="vertical">

            <!-- Header block -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Cuenta"
                android:textColor="?attr/colorOnPrimarySurface" />

            <!-- Header separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="#ffffff" />

            <!-- Content block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawableEnd="@drawable/chevron_right"
                    android:drawableTint="#ffffff"
                    android:fontFamily="@font/poppins"
                    android:text="Tu perfil"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtChangePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawableEnd="@drawable/chevron_right"
                    android:drawableTint="#ffffff"
                    android:fontFamily="@font/poppins"
                    android:text="Cambiar contraseña"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawableEnd="@drawable/chevron_right"
                    android:drawableTint="#ffffff"
                    android:fontFamily="@font/poppins"
                    android:text="Cerrar Sesión"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Eliminar cuenta de ShopMate"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Inner block 2 -->
        <!-- GENERAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_block_bg"
            android:orientation="vertical">

            <!-- Header block -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="General"
                android:textColor="?attr/colorOnPrimarySurface" />

            <!-- Header separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="#ffffff" />

            <!-- Content block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawableEnd="@drawable/chevron_right"
                    android:drawableTint="#ffffff"
                    android:fontFamily="@font/poppins"
                    android:text="Notificaciones"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawableEnd="@drawable/chevron_right"
                    android:drawableTint="#ffffff"
                    android:fontFamily="@font/poppins"
                    android:text="Permisos"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Inner block 3 -->
        <!-- LISTS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_block_bg"
            android:orientation="vertical">

            <!-- Header block -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Listas"
                android:textColor="?attr/colorOnPrimarySurface" />

            <!-- Header separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="#ffffff" />

            <!-- Content block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Vista horizontal"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Ver precios individuales"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Mostrar colores por defecto"
                    android:textColor="?attr/colorOnPrimarySurface"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>