<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorForegroundInverse"
    tools:context=".ui.fragments.profile.ProfileFragment">


<!-- Header -->
<LinearLayout
    android:id="@+id/lytHeader"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:weightSum="20"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/btnGoBack"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtHeaderTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/height"
        android:layout_weight="16"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/strProfile"
        android:textAlignment="center"
        android:textColor="?android:attr/colorForeground"
        android:textSize="@dimen/defaultTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnHambMenu"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/menu"
        app:tint="?android:attr/colorForeground"
        />

</LinearLayout>

<!-- Stats -->
<LinearLayout
    android:id="@+id/lytStats"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lytHeader">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_definitivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytHeader" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtUserUsername"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="danimarin24"
        android:textColor="?android:attr/colorForeground"
        android:gravity="center"
        android:textSize="@dimen/defaultTextSize"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtUserFollows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/colorForeground" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguidos"
                android:textSize="10sp"
                android:textColor="?android:attr/colorForeground" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="?android:attr/colorForeground"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtUserFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/colorForeground" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguidores"
                android:textSize="10sp"
                android:textColor="?android:attr/colorForeground" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="?android:attr/colorForeground"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtUserTotalSaves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/colorForeground" />

            <com.google.android.material.textview.MaterialTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardados"
                android:textSize="10sp"
                android:textColor="?android:attr/colorForeground" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

<!-- Cards -->
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rcvCards"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_marginTop="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lytStats" />

</androidx.constraintlayout.widget.ConstraintLayout>